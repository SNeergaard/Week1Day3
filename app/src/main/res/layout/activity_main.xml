<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

<TextView
    android:layout_width="fill_parent"
    android:id="@+id/screen"
    android:layout_height="130dp"
    android:text=""
    android:textSize="45dp"
    android:padding="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"
        android:rowCount="4"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/btnClr"
            android:text="Clear"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnLPer"
            android:text="("
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnRPer"
            android:text=")"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnMult"
            android:text="*"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnpi"
            android:text="Ï€"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnDiv"
            android:text="/"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btne"
            android:text="e"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnAdd"
            android:text="+"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Space android:width="0dp"
            style="@style/butt"
            android:height="0dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnSub"
            android:text="-"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Space android:width="0dp"
            style="@style/butt"
            android:height="0dp"
            android:visibility="gone"/>
        <Space android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnDec"
            android:text="."
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>
        <Button
            android:id="@+id/btnEqu"
            android:text="="
            android:width="0dp"
            style="@style/butt"
            android:height="0dp"/>

    </GridLayout>

</LinearLayout>

